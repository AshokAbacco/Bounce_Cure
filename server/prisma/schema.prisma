generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  // Inverse relation to Content
  contents Content[]
}

model Content {
  id           Int      @id @default(autoincrement())
  title        String
  description  String?
  animationUrl String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  createdBy    Int

  // Relation to User
  user User @relation(fields: [createdBy], references: [id])
}

model Verification {
  id        Int      @id @default(autoincrement())
  email     String
  status    String
  checkedAt DateTime @default(now())
}
